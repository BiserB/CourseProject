@model ActivePollModel
@{
    ViewData["Title"] = "Vote";
}

@{
    if (Model != null)
    {

        <p> @Model.PollQuestion </p>
        <form asp-area="participant" asp-controller="polls" asp-action="vote" method="post" class="form">
            <input type="hidden" name="pollId" value="@Model.PollId">
            <input type="hidden" name="eventCode" value="@Model.EventCode">
            @foreach (var answer in Model.PollAnswers)
            {
                <hr />
                <div>
                    <label class="custom-checkbox">
                        @answer.Text
                        <input type="radio" name="option" value="@answer.Value">
                        <span class="checkmark"></span>
                    </label>
                </div>
            }
            <hr />
            <button type="submit" class="btn btn-secondary">Vote</button>
        </form>

    }
}