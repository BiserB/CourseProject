<div class="bright-bg height80">
    <div class="row ml-lg-5">
        <a asp-area="manager" asp-controller="activities" asp-action="index">
            <i class="fa fa-arrow-left m-2 reseda"></i>
        </a>
        <div class="ml-auto mr-auto"><span class="mr-5 pr-4">Setup event</span></div>
    </div>

    <form asp-area="Manager" asp-controller="Settings" asp-action="SetupEvent" method="post">
        <input asp-for="Id" type="hidden" />
        <div asp-validation-summary="All" class="text-danger ml-md-5"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="col-md-10 ml-auto mr-auto">
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Code"></label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="row">
                        <div class="form-group col-6">
                            <input type="text" asp-for="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="datepicker form-control">
                            <label asp-for="StartDate"></label>
                        </div>
                        <div class="form-group col-6">                            
                            <input type="text" asp-for="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="datepicker form-control">
                            <label asp-for="EndDate"></label>
                        </div>
                    </div>                    
                </div>
            </div>

            <div class="col-md-6">
                <div class="col-md-10 ml-auto mr-auto">
                                       

                    <hr />
                    <div>
                        <label class="custom-checkbox">
                            IsPrivate
                            <input type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                        <span asp-validation-for="IsPrivate" class="text-danger"></span>
                    </div>
                    <hr />
                    <div>
                        <label class="custom-checkbox">
                            AnonymousAllowed
                            <input type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                        <span asp-validation-for="AnonymousAllowed" class="text-danger"></span>
                    </div>
                    <hr />
                    <div>
                        <label class="custom-checkbox">
                            IsDeleted
                            <input type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                        <span asp-validation-for="IsDeleted" class="text-danger"></span>
                    </div>
                    <hr />
                </div>
            </div>
        </div>
        <div class="row m-3">
            <div class="col-6 text-right">
                <div class="mr-5">
                    <a asp-area="Manager" asp-controller="Activities" asp-action="Index" class="btn btn-outline-dark">CANCEL</a>
                </div>
            </div>
            <div class="col-6 text-left">
                <div class="ml-5">
                    <button type="submit" class="btn btn-secondary">SAVE</button>
                </div>
            </div>
        </div>
    </form>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_DatePicker" />
}