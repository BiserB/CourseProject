@model CreateEventBindingModel

<form asp-area="Manager" asp-controller="Activities" asp-action="Create" method="post">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="my-5">
        <label class="custom-checkbox" data-toggle="tooltip" data-placement="bottom" title="Closed event is not visible and can not accept  questions" asp-for="AnonymousAllowed">
            Event is closed
            <input type="checkbox" asp-for="AnonymousAllowed">
            <span class="checkmark"></span>
        </label>
        <span asp-validation-for="AnonymousAllowed" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <input type="text" asp-for="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="datepicker form-control">
            <label asp-for="StartDate"></label>
        </div>
        <div class="form-group col-6">
            <input type="text" asp-for="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="datepicker form-control">
            <label asp-for="EndDate"></label>
        </div>
    </div>
    <br />
    <div class="row">
        <button type="submit" class="btn btn-secondary ml-auto mr-auto mb-4">CREATE</button>
    </div>
</form>