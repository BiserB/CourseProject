@model PollDetailsModel
@{
    ViewData["Title"] = "Details";
}

<h2 class="h4">Poll for <a href="/manager/settings/setupevent/@Model.EventId"> @Model.EventTitle </a></h2>
<hr />
<div class="row">
    <div class="col-6">
        <h5> @Model.PollQuestion</h5>
        <h6 class="text-muted"> Created: @Model.CreatedOn</h6>
        @{
            foreach (var answer in Model.PollAnswers)
            {
                <hr />
                <p>@answer</p>
            }
        }
        <hr />
    </div>
    <div class="col-6">
        <form asp-area="Manager" asp-controller="Polls" asp-action="SaveChanges" method="post">
            <input asp-for="Id" type="hidden" />
            <div asp-validation-summary="All" class="text-warning"></div>
            <div class="offset-md-2 col-md-4 col-sm-12">

                <div class="form-group">
                    <label asp-for="IsActive"></label>
                    <input asp-for="IsActive" class="form-control" />
                    <span asp-validation-for="IsActive" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsClosed"></label>
                    <input asp-for="IsClosed" class="datepicker form-control">
                    <span asp-validation-for="IsClosed" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsDeleted"></label>
                    <input asp-for="IsDeleted" class="datepicker form-control">
                    <span asp-validation-for="IsDeleted" class="text-warning"></span>
                </div>

            </div>
            <div class="row mt-md-3">
                <div class="col-6 text-right">
                    <a asp-area="Manager" asp-controller="Activities" asp-action="Create" class="btn btn-outline-dark">CANCEL</a>
                </div>
                <div class="col-6 text-left">
                    <button type="submit" class="btn btn-secondary">SAVE</button>
                </div>
            </div>
        </form>
        <hr />
    </div>
</div>


      